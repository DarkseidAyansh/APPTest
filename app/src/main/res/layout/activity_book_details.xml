<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".Book.BookDetails">

    <!-- Container for Book Details -->
    <LinearLayout
        android:id="@+id/book_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/my_style"
        android:backgroundTint="#E0F7FA"
        android:layout_margin="16dp"
        android:background="@drawable/category_card_bc"
        android:elevation="8dp"
        android:padding="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Book Cover Image -->
        <ImageView
            android:id="@+id/book_cover"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            style="@style/my_style"
            android:clipToOutline="true"
            android:background="@drawable/category_card_bc"
            android:src="@drawable/book_image" />

        <!-- Book Title -->
        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Book Title"
            android:textColor="#3DDC84"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Book Author -->
        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Author Name"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!-- Rent Price -->
        <TextView
            android:id="@+id/book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Rent Price: â‚¹300/month"
            android:textColor="#3DDC84"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Rent Now Button -->
    <Button
        android:id="@+id/buy_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="Buy"
        android:textColor="#9D1F1F"
        android:backgroundTint="#E0F7FA"
        app:layout_constraintTop_toBottomOf="@id/book_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Chat with Seller Button -->
    <Button
        android:id="@+id/chat_with_seller_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Chat with Seller"
        android:textColor="#3DDC84"
        android:backgroundTint="#E0F7FA"
        app:layout_constraintTop_toBottomOf="@id/buy_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
